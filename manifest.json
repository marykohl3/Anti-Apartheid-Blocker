{
  "name": "Pro-Israel Blocker",
  "version": "2.0",
  "description": "Blocks companies and products that support companies that are pro-Israel",
  "manifest_version": 2,
  "icons": {
    "16": "images/BI_16.png",
    "32": "images/BI_32.png",
    "48": "images/BI_48.png",
    "128": "images/BI_128.png"
	},
  "background":
  {
    "scripts":["background.js"],
    "persistent": true

  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/BI_16.png",
      "32": "images/BI_32.png",
      "48": "images/BI_48.png",
      "128": "images/BI_128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js":["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "activeTab",
    "<all_urls>",
    "background"
  ]
}
